<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sustech.edu.phantom.dboj.mapper.PermissionMapper">
    <insert id="save">
        insert into "permission" (role, allowance) values
        <foreach collection="list" index="index" item="i" close=";" separator=",">
            (#{i.role},#{i.allowance})
        </foreach>
    </insert>
    <select id="getUserPermission" resultType="java.lang.String">
        select allowance
        from "permission"
        where valid
          and role = #{role};
    </select>
    <select id="getPermissions" resultType="sustech.edu.phantom.dboj.entity.po.Permission">
        select id, role, allowance
        from permission
        where valid;
    </select>
</mapper>