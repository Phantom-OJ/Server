<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sustech.edu.phantom.dboj.mapper.JudgeDatabaseMapper">
    <select id="getJudgeDatabaseById" resultType="sustech.edu.phantom.dboj.entity.JudgeDatabase">
        select id, database_url
        from "judge_database"
        where valid
          and id = #{id};
    </select>
    <insert id="saveJudgeDatabase" parameterType="java.lang.String">
        insert into "judge_database" (database_url)
        values
        <foreach collection="list" index="index" item="l" separator="," close=";">
            (#{l})
        </foreach>
    </insert>
</mapper>